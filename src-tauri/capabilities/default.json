{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    "fs:scope-audio-recursive",
    "fs:allow-audio-read-recursive",
    "fs:allow-audio-write-recursive",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA" },
        { "path": "$APPDATA/**" },
        { "path": "$APPDATA/"},
        { "path": "$APPDATA/**"},
        { "path": "$AUDIO/"},
        { "path": "$AUDIO/**"},
        { "path": "$DATA/"},
        { "path": "$DATA/**"},
        { "path": "$LOCALDATA/"},
        { "path": "$LOCALDATA/**"},
        { "path": "$VIDEO/"},
        { "path": "$VIDEO/**"},
        { "path": "/**"},
        { "path": "**"}
      ]
    },
    "dialog:allow-open",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-register",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    "keep-screen-on:allow-keep-screen-on",
    "os:allow-platform",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save"
  ]
}
